upstream app {
  server unix:/home/ubuntu/apps/site/shared/tmp/sockets/site-puma.sock fail_timeout=0;
}

server {
  listen 80;
  server_name michaelhassin.com www.michaelhassin.com;
  return 301 https://$server_name$request_uri;
}

server {

  listen 443 ssl;
  server_name 52.43.106.40 michaelhassin.com www.michaelhassin.com;
  add_header Strict-Transport-Security "max-age=31536000";
  ssl_certificate /etc/letsencrypt/live/site/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/site/privkey.pem;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH:AES256+ECDHE';

  root /home/ubuntu/apps/site/current/public;

  try_files $uri/index.html $uri @app;

  location / {
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $host;
    proxy_redirect off;
    proxy_http_version 1.1;
    proxy_set_header Connection '';
    proxy_pass http://app;
  }

  location ~ ^/(assets|fonts|system)/|favicon.ico|robots.txt {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}